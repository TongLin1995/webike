<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity" tools:deviceIds="wear_round">

    <TextView android:id="@+id/stepCountView" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Count:"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="URA Wear"
        android:id="@+id/titleTextView"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/stepCountView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Heart Rate: "
        android:id="@+id/heartRateView"
        android:layout_below="@+id/stepCountView"
        android:layout_alignLeft="@+id/stepCountView"
        android:layout_alignStart="@+id/stepCountView"
        android:layout_marginTop="18dp" />
</RelativeLayout>
