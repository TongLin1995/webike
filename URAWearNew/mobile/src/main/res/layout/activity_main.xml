<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout1">

    <TextView android:text="Heart Rate: 0" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap me"
        android:id="@+id/button1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onBtnClicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery 0"
        android:id="@+id/button2"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:onClick="onBtnClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery 50"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="onBtnClicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery 100"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="onBtnClicked"
        />

    <TextView
        android:text="Gravity: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gravityView"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Light: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LightTextView"
        android:layout_below="@+id/gravityView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Magnetic Field: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MagFieldTextView"
        android:layout_below="@+id/LightTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Gyroscope: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GyroScopeTextView"
        android:layout_below="@+id/MagFieldTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Linear Acceleration: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LinearAccelerationTextView"
        android:layout_below="@+id/GyroScopeTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Rotation Vector: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RotationVectorTextView"
        android:layout_below="@+id/LinearAccelerationTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Accelerometer: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AccelerometerTextView"
        android:layout_below="@+id/RotationVectorTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Last Update: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LastUpdateTextView"
        android:layout_below="@+id/AccelerometerTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
